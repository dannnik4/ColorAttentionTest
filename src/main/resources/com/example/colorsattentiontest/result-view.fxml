<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.colorsattentiontest.ResultController"
      spacing="10" padding="10">
    <HBox fx:id="colorBox" spacing="10">
    </HBox>
    <Label fx:id="statusLabel" text="Status message" />
    <TableView fx:id="resultTable">
        <columns>
            <TableColumn fx:id="attemptColumn" text="Attempt"/>
            <TableColumn fx:id="colorsColumn" text="Colors"/>
        </columns>
    </TableView>
    <TableView fx:id="summaryTable">
        <columns>
            <TableColumn fx:id="summaryAttemptColumn" text="Attempt"/>
            <TableColumn fx:id="summaryColorsColumn" text="Colors"/>
        </columns>
    </TableView>
</VBox>
