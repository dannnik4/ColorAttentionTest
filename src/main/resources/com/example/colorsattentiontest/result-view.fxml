<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.colorsattentiontest.ResultController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <HBox fx:id="colorBox" spacing="10">
    </HBox>
    <Label fx:id="statusLabel" text="Status message" />
    <TableView fx:id="resultTable">
        <columns>
            <TableColumn fx:id="attemptColumn" text="№"/>
            <TableColumn fx:id="selectedColorColumn" text="Обраний колір"/>
            <TableColumn fx:id="correctColorColumn" text="Правильний колір"/>
        </columns>
    </TableView>
    <TableView fx:id="summaryTable" maxHeight="125">
        <columns>
            <TableColumn fx:id="summaryAttemptColumn" text="Attempt"/>
            <TableColumn fx:id="summaryColorsColumn" text="Colors"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button text="Нова спроба" onAction="#startNewAttempt"/>
        <Button text="Обнулити спроби" onAction="#resetAttempts"/>
    </HBox>
</VBox>
