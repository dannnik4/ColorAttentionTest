<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.colorsattentiontest.ResultController">

    <TableView fx:id="resultTable">
        <columns>
            <TableColumn text="Attempt"/>
            <TableColumn text="Result"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Начать новую попытку" onAction="#startNewAttempt" />
        <Button text="Сбросить таблицу" onAction="#resetTable" />
    </HBox>
</VBox>